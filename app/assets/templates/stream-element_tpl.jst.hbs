{{#if isPostForTheSession}}
  {{#if isPostForTheType}}
    <div class="media">
     
      {{#if anonymousPost}}
        {{{anonymityString author "img" true}}}
      {{else}}  
        {{{anonymityString author "img" false}}}
      {{/if}}

      <div class="bd">
        {{#if loggedIn}}
          <div class="controls">
            {{#if authorIsCurrentUserORauthorIsTeacherORAdmin}}
              <a href="#" rel="nofollow" class="edit edit_post" title="Edit">
                <div class="icons-pencil edit control_icon"/>
              </a>
              <a href="#" rel="nofollow" class="delete remove_post" title="{{t "delete"}}">
                <div class="icons-deletelabel delete control_icon"/>
              </a>
              {{#if authorIsTeacherOrAdmin}}
                {{#if isPostResolved}} 
                  <a href="#" rel="nofollow" class="resolve mark_resolved" title="Reopen for Discussion">
                    <div class="icons-circle resolve control_icon"/>
                  </a>
                {{else}}
                  <a href="#" rel="nofollow" class="resolve mark_resolved" title="Close Discussion">
                    <div class="icons-circle resolve control_icon"/>
                  </a>
                {{/if}}
              {{/if}}    
            {{/if}}
          </div>
        {{/if}}
        
        <div>
          {{#if anonymousPost}}
            {{{anonymityString author "plain" true}}}
          {{else}}  
            {{{anonymityString author "plain" false}}}
          {{/if}}      
          

          <span class="details grey">
            -
            <a href="/posts/{{id}}">
              <time class="timeago" data-original-title="{{{localTime created_at}}}" datetime="{{created_at}}" />
            </a>

            {{#if interactions.reshares_count}}
              -
              {{t "stream.reshares" count=interactions.reshares_count}}
            {{/if}}
          </span>
        </div>

        {{#if showPost}}
            {{#if nsfw}}
              <div class="nsfw_off">
                <strong>
                  #NSFW
                </strong>
                |
                <a href="#" class="toggle_nsfw_state">
                    {{t "stream.hide_nsfw_posts"}}
                </a>
              </div>
            {{/if}}
          <div class="post-content"> </div>
          <div class="status-message-location"> </div>
          {{#unless isPostResolved}}     
            <div class="feedback"> </div>
          {{/unless}}  
          <div class="likes"> </div>
          <div class="comments"> </div>
        {{else}}
          <div class="nsfw-shield">
            <strong>
              #NSFW
            </strong>
            |
            <a href="#" class="show_nsfw_post">
              {{t "stream.show_nsfw_post"}}
            </a>
            |
            <a href="#" class="toggle_nsfw_state">
              {{t "stream.show_nsfw_posts"}}
            </a>
          </div>
        {{/if}}

      </div>
  {{/if}}    
{{/if}}