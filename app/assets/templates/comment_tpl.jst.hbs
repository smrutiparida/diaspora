<div class="img">
  {{#linkToPerson author}}
    {{{personImage this "small" "small"}}}
  {{/linkToPerson}}
</div>

{{#if teacherCommentORendorsedComment}}
  <div class="bd teacher_comment">
{{else}}
  <div class="bd">
{{/if}}
    {{#if canRemove}}
      <div class="controls">
        <a href="#" class="delete comment_delete" title="{{t "delete"}}">
          <div alt="Deletelabel" class="icons-deletelabel" />
        <a/>
        <a href="#" class="ignore comment_best" title="Mark as Correct Answer">
          <div alt="BestAnswer" class="icons-ignorelabel" />
        <a/>
      </div>
    {{/if}}

    {{#with author}}
      <a href="/people/{{guid}}" class="author author-name {{hovercardable this}}">
        {{name}}
      </a>
    {{/with}}

    <div class="collapsible comment-content">
      {{{text}}}
    </div>

    <div class="info">
      <time class="timeago" data-original-title="{{{localTime created_at}}}" datetime="{{created_at}}"/>
    </div>
  </div>