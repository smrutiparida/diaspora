- content_for :page_title do
  = "New Quiz"

.span-24.last
  #section_header
    %h2
      = "Create a Quiz"

    //= form_for Quiz.new, html: {class: "new_conversation form_do_not_clear"}, remote: true do |quiz|  
#leftNavBar.span-10.append-1{:style => 'height:800px;'}
  %span.add_aspect
    = link_to "Add question to bank", "#hidden_form", :rel => 'facebox'

  %ul.sub_nav#questions_list
    - @quizzes.each do |question|
      %li.hoverable{:data => {:question_id => question.id}}
        %a.action.modify_aspect{:href => "/questions/clone/#{question.id}", :rel => "facebox"}          
        %a.selectable{:href => "#"}
          = question.description

.span-13.last
  #people_stream.stream.contacts
  %h3.no_contacts
    = link_to "Add question", "#", :id=>"question_add", :class => 'button creation'
    = "or Load from the Question bank"
  #form_space    
.span-  

  #hidden_form.hidden
    = render 'questions/new'

:javascript
  $('#question_form_cancel').click(function(){
    hidden_form_active = false;
    $.facebox.close();
  });
  
  $('#question_add').click(function(){
    hidden_form_active = false;
    if(!active){
      $('#form_space').append($('#hidden_form').html());
      hidden_form_active = true;
    }
    else {
      Diaspora.page.flashMessages.render({ 'success':true, 'notice':'A question is already in process..' });
    }
    return false;
  });  
