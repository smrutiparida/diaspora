%li.comment{:data=>{:guid=>quiz.id}, :style => "height:20px;padding:4px 0 4px 0;border-bottom:1px solid #ccc;"}
  -#
    .remove_comment
      .right
        - if user_signed_in? && quiz.author == current_user.person
          = link_to(image_tag('deletelabel.png'), '/quizzes', :method => :delete, :data => { :confirm => "#{t('are_you_sure')}" }, :class => "remove")
        - else
          = link_to( 'Submit', '/quizzes')
  %span
    = quiz.title      
  %span.time.timeago{:datetime => quiz.created_at, :style => "float:right;"}
    = "Solved "
    = quiz.created_at ? time_ago_in_words(quiz.created_at) : time_ago_in_words(Time.now)
    = " ago"


