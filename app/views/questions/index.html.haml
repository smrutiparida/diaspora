%div{:style => 'width:600px;'}
  %div{:style => 'height:300px;float:right;padding-left:10px;border-left:1px solid #ccc;'}
    #question_show
    = link_to "Add to Quiz", '#', :class => 'button creation', :id => 'add_to_quiz', :'data-qid' => ''
  %ul.sub_nav#questions_list
    - if @questions.size > 0
      - @questions.each do |question|
        %li.hoverable.q_selectable{:data => {:question_id => question.id}}
          %a.selectable{:href => "#"}
            = question.description
    - else
      = "No Questions in question bank"       
  