#new_message_pane
  .span-12.last
    #facebox_header
      %h3
        = t('conversations.index.new_message')

    = form_for Conversation.new, html: {class: "new_conversation form_do_not_clear"}, remote: true do |conversation|

      .span-2
        %h4
          = "To"
      .span-10.last
        = text_field_tag "contact_autocomplete", @person.diaspora_handle
        = hidden_field_tag "contact_ids", @contact.id
      .clearfix
      %br
      .span-2
        %h4
          = "Subject"
      .span-10.last
        = conversation.text_field :subject
      %br
      .span-10.prepend-2.last
        = text_area_tag "conversation[text]", '', :rows => 5
      .clearfix
      .bottom_submit_section
        = conversation.submit "Send", 'data-disable-with' => "Sending...", :class => 'button creation'

%p
  - unless current_user.person.nil?
    = current_user.person.diaspora_handle
    - unless current_user.person.role.nil? 
      = current_user.person.role.name  