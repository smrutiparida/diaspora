- content_for :head do
  :javascript
    $(".jquery-ui-date").datepicker();

.span-15.last
  .span-3
    .icons-cog

  .span-12.last
    %h3
      = "Create Assignment"
      %br
  .span-10.append-1.last
    
    %br
    
    #create_assignment

      = form_for Assignment.new, html: {class: "new_conversation form_do_not_clear"}, remote: true do |assignment|
        
        %h5
          = "Title"    
        = text_field_tag 'assignment[name]', nil, :placeholder => 'Assignment title..', :size => '20'
        
        

        %h5
          = "Description"  
        = text_area_tag 'assignment[description]', nil, :rows => '3', :placeholder => "What students need to do.."

        
        
        = text_field_tag 'assignment[submission_date]', nil, :placeholder => "Due Date..", :class => 'jquery-ui-date', :size => '10', :style => "width:25%"       

        %h5.fieldWithErrors Points  
        = text_field_tag 'assignment[comments_count]', '10', :class => 'jquery-ui-date', :style => "width:10%;display:inline-block"       

        %div
          = check_box_tag 'assignment[file_upload]', 'true' , true, :style => 'float:left;'
          %span{:style => 'margin-left:4px;vertical-align:middle;'} Students will upload a file as part of submission
          
        

        %br
        %br

        %p
          = assignment.submit "Create Assignment", 'data-disable-with' => "In Progress..", :class => 'button creation'

  .span-12.last
    %h3
      Use your previous assignments
      %br
    
    .section
      - for assignment in @assignments
        %div{:style => "padding:3px;"}          
          %span.selectable
            = link_to assignment.name, '#', :onClick => "$('#assignment_name').val(unescape('" + assignment.name.to_s.html_safe + "')); $('#assignment_description').val(unescape('" + assignment.description.to_s.html_safe + "'))"          
          //%span
          //  Last assigned on
          //  = time_tag assignment.created_at


      


