.section
  .title
    .icons-question
    %h5.title-header
      = "Quizzes"
  .content
    - if @quizzes and @quizzes.length > 0
      = render "shared/quizzes"
    -else
      = "No quizzes present"

.section
  .title
    .icons-bookmark
    %h5.title-header
      = "Assignments"
  .content
    - if @assignments and @assignments.length > 0
      = render "shared/assignmentss"
    -else
      = "No assignmentss present"  
.section
  .title
    .icons-plus
    %h5.title-header
      = "Your Library"
  .content
    - if documents and @documents.length > 0
      = render "shared/documents"
    - else
      = "You have not added any documents yet!"
      %br
      =  Start now
      %br
      = link_to "Click here", "/library", :class => "button"