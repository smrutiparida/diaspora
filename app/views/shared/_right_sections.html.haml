- curent_user.role != "teacher"
  .section
    .title
      .icons-question
      %h5.title-header
        = "My Teacher"
    .content#aspect_teacher
  
.section
  .title
    .icons-question
    %h5.title-header
      = "Quizzes"
  .content
    - if @quizzes and @quizzes.length > 0
      - for quiz in @quizzes        
        = quiz.title
        = " " 
        = time_ago_in_words(quiz.created_at)
        %br                
    -else
      = "No quizzes present"

.section
  .title
    .icons-bookmark
    %h5.title-header
      = "Open Assignments"
  .content
    - if @assignments and @assignments.length > 0      
      - for assignment in @assignments
        = link_to assignment.name[0..30], "assignment_assessments/" + assignment.id.to_s
        %br                      
    - else
      = "No assignmentss present"  
