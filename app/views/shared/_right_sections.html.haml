- if current_user.role != "teacher"
  .section#teacher_thubmnail{:style => 'display:none;'}
    .title
      .icons-question
      %h5.title-header
        = "My Instructor"
    .content#aspect_teacher
  
.section
  .title
    .icons-plus
    %h5.title-header
      = "Filters"
  %div 
    %ul.content#filters_list
      = render "shared/links"  

.section
  .title
    .icons-bookmark
    %h5.title-header
      = "Top Contributors"
  %ul.content#report_snippet    
  
.section
  .title
    .icons-coffee
    %h5.title-header
      = "Quick Links"
  %div
    %ul.content
      %li= link_to "Download Digest", '#', :id => 'download_link'
      - if current_user.role == "teacher" or current_user.role == "institute_admin"
        %li= link_to "Download Grades", '#', :id => 'download_grade_link'
      
    
- if current_user.role == "teacher"
  .section
    .title
      .icons-mail
      %h5.title-header
        = "Invite Students"
    .content
      = "Share the course code via email to let your students join LMNOP"
      = link_to t('.by_email'), '#', :title => "invite student", :rel => 'facebox', :id => 'course_invite_link'

-#
  .section
    .title
      .icons-question
      %h5.title-header
        = "View"
    .content
      - if @quizzes and @quizzes.length > 0
        - for quiz in @quizzes        
          = quiz.title
          = " " 
          = time_ago_in_words(quiz.created_at)
          %br                
      -else
        = "No quizzes present"

  .section
    .title
      .icons-bookmark
      %h5.title-header
        = "Open Assignments"
    .content
      - if @assignments and @assignments.length > 0      
        - for assignment in @assignments
          = link_to assignment.name[0..30], "assignment_assessments/" + assignment.id.to_s
          %br                      
      - else
        = "No assignmentss present"
  .section
    .title
      .icons-plus
      %h5.title-header
        = "Personal Files"
    .content
      - if @documents and @documents.length > 0
        - for document in @documents
          = link_to document.processed_doc[0..30], document.unprocessed_doc.url
          %br                      
      - else
        = "You have not added any documents yet!"
        %br
        =  "Start now"
        %br
        %br
        = link_to "Click here", "/library", :class => "button"