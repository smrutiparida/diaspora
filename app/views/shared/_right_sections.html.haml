- if current_user.role != "teacher"
  .section#teacher_thubmnail{:style => 'display:none;'}
    .title
      .icons-mail
      %h5.title-header
        = "My Teacher"
    .content#aspect_teacher
  
.section
  .title
    .icons-question
    %h5.title-header
      = "Quizzes"
  .content
    - if @quizzes and @quizzes.length > 0
      - for quiz in @quizzes        
        = quiz.title
        = " " 
        = time_ago_in_words(quiz.created_at)
        %br                
    -else
      = "No quizzes present"

.section
  .title
    .icons-bookmark
    %h5.title-header
      = "Open Assignments"
  .content
    - if @assignments and @assignments.length > 0      
      - for assignment in @assignments
        = link_to assignment.name[0..30], "assignment_assessments/" + assignment.id.to_s
        %br                      
    - else
      = "No assignmentss present"  

- if AppConfig.settings.invitations.open?
  .section
    .title
      .icons-plus
      %h5.title-header
        = t('shared.invitations.invite_your_friends')
    .content
      = render "shared/invitations"

.section
  .title
  %ul.content
    = render "shared/links"

-#
  .section
    .title
      .icons-plus
      %h5.title-header
        = "Personal Files"
    .content
      - if @documents and @documents.length > 0
        - for document in @documents
          = link_to document.processed_doc[0..30], document.unprocessed_doc.url
          %br                      
      - else
        = "You have not added any documents yet!"
        %br
        =  "Start now"
        %br
        %br
        = link_to "Click here", "/library", :class => "button"