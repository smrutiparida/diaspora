.span-15.last
  .span-10.append-1.last    
    #create_module
      = form_for Course.new, html: {class: "new_conversation form_do_not_clear"}, remote: true do |course|  
        %h5{:style => 'margin-bottom:0px;margin-left:10px;display:inline;'}
          = "Select Module"   
        = select_tag "course[module_id]", options_from_collection_for_select(@modules, "id", "name")          
        = hidden_field_tag "course[type]", "OEmbedCache"
        = hidden_field_tag "course[post_id]", nil
    
    #create_assignment

      = form_for OEmbedCache.new, html: {class: "new_conversation form_do_not_clear"}, remote: true do |embed|
        
        %h5{:style => 'margin-bottom:0px;'}
          = "Title"    
        = text_field_tag 'o_embed_cache[data]', nil, :placeholder => 'Link title..', :size => '50'
        - if !params[:header]
          %h5{:style => 'margin-bottom:0px;'}
            = "Link"    
          = text_field_tag 'o_embed_cache[url]', nil, :placeholder => 'Link..', :size => '50'
        - else
          = hidden_field_tag 'o_embed_cache[url]', nil
        %p
          = embed.submit "Add link to module", 'data-disable-with' => "In Progress..", :class => 'button creation'


  


