.span-15.last
  .span-10.append-1.last    
    #create_module
      = form_for Course.new, html: {class: "new_conversation form_do_not_clear"}, remote: true do |course|  
        %h5{:style => 'margin-bottom:0px;display:inline;'}
          = "Select Module"   
        = select_tag "course[module_id]", options_from_collection_for_select(@modules, "id", "name")          
        = hidden_field_tag "course[type]", "StatusMessage"
        = hidden_field_tag "course[post_id]", nil
    
    #create_assignment

      = form_for StatusMessage.new, html: {class: "new_conversation form_do_not_clear"}, remote: true do |embed|
        
        %h5{:style => 'margin-bottom:0px;'}
          = "Text/ Video / Link"    
        = text_area_tag 'status_message[text]', nil, :placeholder => 'Text..', :rows => 3
        = hidden_field_tag "aspect_ids[]", params[:a_id]
        %p
          = embed.submit "Add to session", 'data-disable-with' => "In Progress..", :class => 'button creation'
  

