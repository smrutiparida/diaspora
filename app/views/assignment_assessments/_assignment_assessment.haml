%h3
  = assignment_assessment.diaspora_handle
%div
  = "Submitted on"
  = assignment_assessment.submission_date
  = link_to assignment_assessment.filename, assignment_assessment.filepath
  - if assignment.is_result_published and assignment_assessment.is_checked  
    = label_tag 'Points', "Points earned:" + assignment_assessment.points.to_s
    = label_tag 'Comments', assignment_assessment.comments
  - else
    = label_tag "Progress", "Evaluation in Progress"
